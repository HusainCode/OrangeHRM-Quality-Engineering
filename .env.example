# Environment Configuration
# Copy this file to .env and update with your values

# Environment (demo, staging, dev)
ENV=demo

# Browser settings
HEADLESS=true
BROWSER=chromium
SLOW_MO=0

# Credentials (demo environment)
ORANGEHRM_USER=Admin
ORANGEHRM_PASSWORD=admin123

# Staging credentials (if applicable)
# STAGING_USER=Admin
# STAGING_PASSWORD=admin123

# Dev credentials (if applicable)
# DEV_USER=admin
# DEV_PASSWORD=admin

# Timeout settings (milliseconds)
DEFAULT_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000
ACTION_TIMEOUT=10000

# Test artifacts
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=false
TRACE_ON_FAILURE=true

# Retry settings
MAX_RETRIES=1
RETRY_DELAY=2

# Parallel execution
WORKERS=auto

# Report paths
REPORTS_DIR=reports
SCREENSHOTS_DIR=reports/screenshots
VIDEOS_DIR=reports/videos
TRACES_DIR=reports/traces
